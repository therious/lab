{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module":"CommonJS",
    "lib": ["es2020","dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "strictNullChecks": true,
  }
}
