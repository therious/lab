{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false
  },
  "include": [
    "*.ts",
    "../libs/utils/src/bip39.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../libs/utils/index.ts"
  ]
}

