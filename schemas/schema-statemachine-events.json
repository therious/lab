{
  "$id": "schema-statemachine.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Statemachine Events Schema",
  "required": [],
  "additionalProperties": false,
  "definitions": {
    "uniqueListVarNameIdentifiers": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z][a-zA-Z_0-9]+$"
      }
    },
    "sToken": {
      "type": "string"
    },
    "event": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z_0-9]+$": {}
      }
    }

  },

  "properties": {
    "tokens": {
      "type": "array",
      "uniqueItems": false,
      "items": {
        "anyOf": [{}]
      }
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from","to"],
        "properties": {
          "from": {
            "anyOf": [{
              "type": "string"
            },{
              "type": "array", "items": {
                "type": "string"
              }
            }
            ]
          },
          "to": {
            "type": "string"
          },
          "evt": {
            "type": "string"
          },
          "cond": {
            "type": "string"
          },
          "after": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "behavior" : {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^enter": {"type": "string"},
        "^exit": {"type": "string"}
      }
    }
  }
}