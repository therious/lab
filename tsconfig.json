{
  "compilerOptions": {
    "experimentalDecorators": true,
    "types": ["vite/client"],
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "apps/**/src", "servers/**/src","cmps/**/src", "libs/**/src"
  ],
  "exclude": [
    "docs/**", "deploy-scripts/**", "scripts", "**/coverage", "**/dist/", "libs/th-utils"
  ],

}
